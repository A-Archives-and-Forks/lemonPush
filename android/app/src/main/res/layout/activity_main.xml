<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_activity_bg">

    <!-- 主要内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <!-- 电脑选择卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ui_card_background"
            android:padding="20dp"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电脑连接"
                android:textSize="15sp"
                android:textColor="@color/text_dark_black_2"
                android:layout_marginBottom="8dp"

                android:textStyle="bold" />
                
            <Button
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/btn_secondary"
                android:text="选择电脑设备"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:drawableLeft="@android:drawable/ic_menu_compass"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                />
        </LinearLayout>

        <!-- 自动操作设置 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ui_card_background"
            android:padding="20dp"
            android:layout_marginBottom="20dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动操作"
                android:textSize="15sp"
                android:textColor="@color/text_dark_black_2"
                android:layout_marginBottom="8dp"
                android:textStyle="bold" />
                
            <Button
                android:id="@+id/auto_operation_button"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/btn_secondary"
                android:text="选择自动操作模式"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:drawableLeft="@android:drawable/ic_menu_manage"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                />
        </LinearLayout>

        <!-- 主要操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/get"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/btn_action"
                android:text="获取电脑剪切板"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:drawableTint="@color/white"
                android:drawableLeft="@drawable/laptop_outline"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />



            <Button
                android:id="@+id/split"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/btn_action"
                android:text="分词后推送"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:drawableTint="@color/white"
                android:drawableLeft="@drawable/flash_outline"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

            <Button
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/btn_action"
                android:text="推送剪切板到电脑"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:drawableTint="@color/white"
                android:drawableLeft="@drawable/paper_plane_outline"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 底部版本号 -->
    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="v1.0.1"
        android:textColor="@color/textGray"
        android:textSize="11sp"
        android:gravity="center"
        android:padding="12dp" />

</LinearLayout>